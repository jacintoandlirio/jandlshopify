{% doc %}
  @prompt
    Create a premium hero section for a product landing page.
    
    Layout: two-column layout on desktop (text on the left, image on the right), stacked layout on mobile.
    
    Include a large headline that reads:
    “Work Smart. Carry With Purpose.”
    
    Below the headline, add a short paragraph describing a multifunctional laptop and workstation bag designed for modern professionals, made from sustainable water hyacinth leatherette, suitable for office work, travel, and everyday use.
    
    Add a row of three small value highlights with icons:
    – Eco-Friendly
    – Professionally Made
    – Sustainable Craft
    
    Include a primary call-to-action button labeled “Shop Now”.
    
    The design should feel minimal, elegant, and professional, with generous white space, neutral tones, and a premium editorial look suitable for both retail and corporate buyers.
    
    Reserve space for a lifestyle product image on the right.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-premium-hero-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
  }

  .ai-premium-hero-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 {{ block.settings.horizontal_padding }}px;
  }

  .ai-premium-hero-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.column_gap }}px;
    align-items: center;
  }

  .ai-premium-hero-content-{{ ai_gen_id }} {
    padding-right: {{ block.settings.content_padding_right }}px;
  }

  .ai-premium-hero-headline-{{ ai_gen_id }} {
    font-size: {{ block.settings.headline_size }}px;
    line-height: 1.2;
    color: {{ block.settings.headline_color }};
    margin: 0 0 {{ block.settings.headline_spacing }}px;
    font-weight: {{ block.settings.headline_weight }};
    letter-spacing: {{ block.settings.headline_letter_spacing }}px;
  }

  .ai-premium-hero-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    line-height: 1.6;
    color: {{ block.settings.description_color }};
    margin: 0 0 {{ block.settings.description_spacing }}px;
    max-width: {{ block.settings.description_max_width }}px;
  }

  .ai-premium-hero-highlights-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.highlights_gap }}px;
    margin-bottom: {{ block.settings.highlights_spacing }}px;
    flex-wrap: wrap;
  }

  .ai-premium-hero-highlight-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: {{ block.settings.highlight_icon_gap }}px;
  }

  .ai-premium-hero-highlight-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ block.settings.icon_color }};
  }

  .ai-premium-hero-highlight-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
  }

  .ai-premium-hero-highlight-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.highlight_text_size }}px;
    color: {{ block.settings.highlight_text_color }};
    font-weight: {{ block.settings.highlight_text_weight }};
    text-align: center;
  }

  .ai-premium-hero-cta-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    border-radius: {{ block.settings.button_border_radius }}px;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    letter-spacing: {{ block.settings.button_letter_spacing }}px;
  }

  .ai-premium-hero-cta-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  .ai-premium-hero-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: {{ block.settings.image_min_height }}px;
  }

  .ai-premium-hero-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-premium-hero-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    min-height: {{ block.settings.image_min_height }}px;
    background-color: {{ block.settings.placeholder_background }};
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-premium-hero-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
    opacity: 0.3;
  }

  .ai-premium-hero-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 24px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 4px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 989px) {
    .ai-premium-hero-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.mobile_gap }}px;
    }

    .ai-premium-hero-content-{{ ai_gen_id }} {
      padding-right: 0;
      order: {{ block.settings.mobile_content_order }};
    }

    .ai-premium-hero-image-wrapper-{{ ai_gen_id }} {
      order: {{ block.settings.mobile_image_order }};
    }

    .ai-premium-hero-headline-{{ ai_gen_id }} {
