    }

    .ai-premium-hero-highlights-{{ ai_gen_id }} {
      justify-content: center;
    }

    .ai-premium-hero-cta-{{ ai_gen_id }} {
      width: 100%;
      text-align: center;
    }
  }
{% endstyle %}

<premium-hero-{{ ai_gen_id }} class="ai-premium-hero-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-premium-hero-container-{{ ai_gen_id }}">
    <div class="ai-premium-hero-grid-{{ ai_gen_id }}">
      <div class="ai-premium-hero-content-{{ ai_gen_id }}">
        {% if block.settings.headline != blank %}
          <h1 class="ai-premium-hero-headline-{{ ai_gen_id }}">
            {{ block.settings.headline }}
          </h1>
        {% endif %}

        {% if block.settings.description != blank %}
          <div class="ai-premium-hero-description-{{ ai_gen_id }}">
            {{ block.settings.description }}
          </div>
        {% endif %}

        <div class="ai-premium-hero-highlights-{{ ai_gen_id }}">
          {% if block.settings.highlight_1_enabled %}
            <div class="ai-premium-hero-highlight-{{ ai_gen_id }}">
              <div class="ai-premium-hero-highlight-icon-{{ ai_gen_id }}">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M12 2L2 7l10 5 10-5-10-5z"/>
                  <path d="M2 17l10 5 10-5"/>
                  <path d="M2 12l10 5 10-5"/>
                </svg>
              </div>
              <span class="ai-premium-hero-highlight-text-{{ ai_gen_id }}">
                {{ block.settings.highlight_1_text }}
              </span>
            </div>
          {% endif %}

          {% if block.settings.highlight_2_enabled %}
            <div class="ai-premium-hero-highlight-{{ ai_gen_id }}">
              <div class="ai-premium-hero-highlight-icon-{{ ai_gen_id }}">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                  <circle cx="12" cy="7" r="4"/>
                </svg>
              </div>
              <span class="ai-premium-hero-highlight-text-{{ ai_gen_id }}">
                {{ block.settings.highlight_2_text }}
              </span>
            </div>
          {% endif %}

          {% if block.settings.highlight_3_enabled %}
            <div class="ai-premium-hero-highlight-{{ ai_gen_id }}">
              <div class="ai-premium-hero-highlight-icon-{{ ai_gen_id }}">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10"/>
                  <polyline points="12 6 12 12 16 14"/>
                </svg>
              </div>
              <span class="ai-premium-hero-highlight-text-{{ ai_gen_id }}">
                {{ block.settings.highlight_3_text }}
              </span>
            </div>
          {% endif %}
        </div>

        {% if block.settings.button_text != blank %}
          <a href="{{ block.settings.button_link }}" class="ai-premium-hero-cta-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </a>
        {% endif %}
      </div>

      <div class="ai-premium-hero-image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.image %}
          <img
            src="{{ block.settings.image | image_url: width: 1200 }}"
            alt="{{ block.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
            class="ai-premium-hero-image-{{ ai_gen_id }}"
          >
        {% else %}
          <div class="ai-premium-hero-image-placeholder-{{ ai_gen_id }}">
            {{ 'hero-apparel-1' | placeholder_svg_tag }}
            <div class="ai-premium-hero-empty-state-{{ ai_gen_id }}">
              Add a lifestyle product image
            </div>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</premium-hero-{{ ai_gen_id }}>

<script>
  (function() {
    class PremiumHero{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
      }
    }

    customElements.define('premium-hero-{{ ai_gen_id }}', PremiumHero{{ ai_gen_id }});
  })();
</script>

